{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "baseUrl": ".",
      "paths": {
         "@/*": ["src/*"],
         "@root/*": ["*"]
      },
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "allowJs": true,
      "resolveJsonModule": true
   }
}