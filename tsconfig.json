{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "baseUrl": ".",
      "paths": {
         "@/*": ["src/*"],
         "@root/*": ["."]
      },
      "target": "es2017",
      "declaration": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "allowJs": true,
      "resolveJsonModule": true
   },
   "include": [
      "src/**/*.ts"
   ]
}